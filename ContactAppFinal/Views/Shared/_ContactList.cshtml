@model IEnumerable<ContactAppFinal.Models.Contact>

<button class="btn btn-success mb-3" onclick="createContact()">New Contact</button>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>IsActive</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.FName</td>
                    <td>@contact.LName</td>
                    <td>
                        <input type="checkbox" class="isActiveToggle" data-id="@contact.ContactId" @(contact.IsActive ? "checked" : "") />
                    </td>
                    <td style="width:15rem">
                        @if (contact.IsActive)
                        {
                            <button class="btn btn-primary btn-sm" onclick="editContact('@contact.ContactId')">Edit</button>
                            @Html.ActionLink("Contact Details", "ManageContactDetails", new { id = contact.ContactId }, new { @class = "btn btn-primary color-light btn-sm" })
                           
                        }
                        else
                        {
                            <span class="text-muted">Inactive Contact</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No contacts found.</td>
            </tr>
        }
    </tbody>
</table>


