@model IEnumerable<ContactAppFinal.Models.Contact>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>IsActive</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.FName</td>
                    <td>@contact.LName</td>
                    <td>@(contact.IsActive ? "Active" : "Inactive")</td>
                    <td>
                        <button class="btn btn-primary btn-sm" onclick="editContact('@contact.ContactId')">Edit</button>
                        <button class="btn btn-danger btn-sm" onclick="deleteContact('@contact.ContactId')">Delete</button>
                        @Html.ActionLink("Contact Details", "ManageContactDetails", new { id = contact.ContactId }, new { @class = "btn btn-info btn-sm" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No contacts found.</td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-success" onclick="createContact()">Create New Contact</button>
